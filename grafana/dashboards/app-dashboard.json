{
  "uid": "finaltaskmetrics",
  "title": "Final Task Application Metrics",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "total",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "type": "timeseries",
      "title": "Error Rate (5xx errors/s)",
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "errors",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "type": "timeseries",
      "title": "95th Percentile Request Duration (s)",
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "version": 1,
  "templating": { "list": [] }
}